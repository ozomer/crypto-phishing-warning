{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "browser": true
  },
  "rules": {
    "arrow-parens": "off",
    "no-confusing-arrow": "off",
    "no-unused-expressions": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-one-expression-per-line": "off",
    "template-curly-spacing" : "off",
    "indent" : "off",
    "max-len": ["warn", { "code": 120 }]
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "firebase": "readonly"
  }
}
